<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">
               
     <context:annotation-config/>
     

	<bean id="controller" class="SpringCoreQ3.BankAccountcontroller"/>
	<bean id="Account" class="SpringCoreQ3.BankAccount" autowire="byType">  
		<constructor-arg   value="1"/>
		<constructor-arg  value="Rahul"/>
		<constructor-arg   value="Saving"/>
		<constructor-arg   value="20000"/>  
	</bean>  
	
	 
</beans>